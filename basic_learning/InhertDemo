# 时间：2020.10.12 12点42分
# 创建一个"乌龟"对象并使用它
# 王八继承乌龟

class Turtle:
    color="green"
    foot=4
    mouth="nomal"
    shell=0
    whight=0

    def run(self):
        print("我正在飞速奔跑！")

    def eat(self):
        print("吃得好香~")

class Wangba(Turtle):
    def infor(self):
        print("大家好，我是王八！")

#实例化乌龟
turtle=Turtle()
turtle.eat()
turtle.run()

#实例化王八，调用吃，跑的父类方法
wangba=Wangba()
wangba.infor()
wangba.eat()
wangba.run()
